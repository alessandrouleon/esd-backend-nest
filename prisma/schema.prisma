// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
    // provider = "mysql"
  url      = env("DATABASE_URL")
}

model Lines {
  id          String      @id @default(uuid())
  code        String      @unique @db.VarChar(24)
  stage       String?     @db.VarChar(24)
  description String?     @unique @db.VarChar(256)
    createdAt   DateTime    @default(dbgenerated("NOW()"))
  // createdAt   DateTime    @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt   DateTime?  
  deletedAt   DateTime?
  Employees   Employees[]
}

model Employees {
  id           String    @id @default(uuid())
  name         String
  registration String    @unique
  department   String
  shift        String    @db.VarChar(64)
  Line         Lines     @relation(fields: [linesId], references: [id])
  linesId      String
    createdAt    DateTime  @default(dbgenerated("NOW()")) 
  // createdAt    DateTime  @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt    DateTime?
  deletedAt    DateTime?
  Users        Users[]
}

model Users {
  id         String    @id @default(uuid())
  userName   String    @unique @db.VarChar(64)
  password   String    
  email      String    @unique @db.VarChar(64)
  permission String    @db.VarChar(64)
  Employee   Employees @relation(fields: [employeeId], references: [id])
  employeeId String
   createdAt  DateTime  @default(dbgenerated("NOW()"))
  // createdAt  DateTime  @default(dbgenerated("NOW()")) @db.DateTime
  updatedAt  DateTime?
  deletedAt  DateTime?
}
